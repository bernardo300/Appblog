<h1>adionar postagem</h1>
{{#each erros}}
    <div class="alert alert-danger"> {{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" id="id" value="{{postagem._id}}">
            <label for="titulo">Titulo:</label>
                <input type="text" name="titulo" id="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug:</label>
                <input type="text" name="slug" id="slug" value="{{postagem.slug}}"class="form-control">
            <label for="descricao">Descricao:</label>
                <input type="text" name="descricao" id="descricao" value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo">Conteudo:</label>
                <textarea name="conteudo" id="conteudo" value="{{postagem.conteudo}}" class="form-control">{{postagem.conteudo}}</textarea></br>
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="categoria" class="form-select">
                <option value="{{postagem.categoria._id}}" selected="true" disabled>{{postagem.categoria.nome}}</option>

                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria</option>
                {{/each}}

            </select>
            <button type="submit" class="btn btn-success mt-2">Salvar Postagem</button>
        </form>
    </div>
</div>


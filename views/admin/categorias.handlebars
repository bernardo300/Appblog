<h1>Lista de categorias</h1>
<hr>
<a href="/admin/addcategorias"><button class="btn btn-success">Nova categoria</button></a>
{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small></br>
            <small>Data: {{date}}</small>
            </br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
            
            <form action="/admin/categoria/deletar" method="POST" class="mt-2">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger">Deletar</button>
            </form>
        </div>
    </div>

{{else}}

{{/each}}
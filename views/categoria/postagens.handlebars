<h2>{{categoria.nome}}</h2>
<div class="card mt-4">
    <div class="card-body">
        {{#each postagens}}            
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Categoria: {{categoria.name}}</small>
            <smal>Data de publicação: {{data}}</smal>
        {{else}}

            <h4>Nenhuma postagem ainda</h4>

        {{/each}}
    </div>
</div>